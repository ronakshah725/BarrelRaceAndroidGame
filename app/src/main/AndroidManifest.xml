<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swaroop.barrelraceuid.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:configChanges="orientation"
            android:label="@string/title_activity_game"
            android:parentActivityName=".MyActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.swaroop.barrelraceuid.app.MyActivity" />
        </activity>
        <activity
            android:name=".BarrelRace"
            android:configChanges="orientation"
            android:label="@string/title_activity_barrel_race"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".HighScores"
            android:configChanges="orientation"
            android:label="@string/title_activity_high_scores"
            android:parentActivityName=".MyActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.swaroop.barrelraceuid.app.MyActivity" />
        </activity>
        <activity
            android:name=".Settings"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MyActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.swaroop.barrelraceuid.app.MyActivity" />
        </activity>
        <activity
            android:name=".AddScore"
            android:label="@string/title_activity_add_score" >
        </activity>
    </application>

</manifest>
